<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Signup"
        android:background="@color/colorPrimary">


    <TextView
            android:text="Crear Cuenta"
            android:textColor="@color/colorPrimaryWhite"
            android:layout_width="290dp"
            android:layout_height="44dp"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="52dp" android:textSize="24sp"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="nombre(s)"
            android:id="@+id/edtName"
            android:textColorHint="@color/colorPrimaryWhite"
            android:textColor="@color/colorPrimaryWhite"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp" app:layout_constraintHorizontal_bias="0.491"/>
    <EditText
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="apellidos"
            android:text=""
            android:ems="10"
            android:textColorHint="@color/colorPrimaryWhite"
            android:textColor="@color/colorPrimaryWhite"
            android:id="@+id/edtLast"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/edtName"/>
    <EditText
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Contraseña"
            android:textColorHint="@color/colorPrimaryWhite"
            android:textColor="@color/colorPrimaryWhite"
            android:ems="10"
            android:id="@+id/edtPwd1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="85dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/edtEmailR"/>
    <EditText
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Confirmar Contraseña"
            android:textColorHint="@color/colorPrimaryWhite"
            android:textColor="@color/colorPrimaryWhite"
            android:ems="10"
            android:id="@+id/edtPassword2"
            app:layout_constraintTop_toBottomOf="@+id/edtPwd1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.493"/>
    <EditText
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:hint="Telefono"
            android:textColorHint="@color/colorPrimaryWhite"
            android:textColor="@color/colorPrimaryWhite"
            android:id="@+id/edtPhone"
            app:layout_constraintTop_toBottomOf="@+id/edtPassword2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.503"/>
    <TextView
            android:text="Crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCreateUser"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="163dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="163dp" android:textColor="@color/colorPrimaryWhite" android:textSize="24sp"
            android:layout_marginBottom="9dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/edtVehicle"/>
    <EditText
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="example@example.com"
            android:textColorHint="@color/colorPrimaryWhite"
            android:id="@+id/edtEmailR"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="97dp" app:layout_constraintHorizontal_bias="0.422"
            android:textColor="@color/colorPrimaryWhite" app:layout_constraintTop_toBottomOf="@+id/edtLast"/>
    <EditText
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:hint="Placas"
            android:textColorHint="@color/colorPrimaryWhite"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtVehicle" android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/edtPhone" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="85dp"
            android:textColor="@color/colorPrimaryWhite"/>
</android.support.constraint.ConstraintLayout>